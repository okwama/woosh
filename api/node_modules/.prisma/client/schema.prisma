datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String // Store hashed passwords
  outlets      Outlet[]
  orders       Order[]
  journeyPlans JourneyPlan[]
  tokens       Token[] // For token management
}

model Token {
  id        Int      @id @default(autoincrement())
  token     String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}

// Other models (Outlet, Order, JourneyPlan) remain the same

model Outlet {
  id           Int           @id @default(autoincrement())
  name         String
  address      String
  userId       Int
  user         User          @relation(fields: [userId], references: [id])
  journeyPlans JourneyPlan[]
}

model Order {
  id        Int      @id @default(autoincrement())
  product   String
  quantity  Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JourneyPlan {
  id       Int      @id @default(autoincrement())
  date     DateTime
  time     DateTime
  userId   Int
  outletId Int
  user     User     @relation(fields: [userId], references: [id])
  outlet   Outlet   @relation(fields: [outletId], references: [id])
}
